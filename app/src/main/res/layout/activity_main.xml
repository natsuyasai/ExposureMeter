<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#9b000000"
    android:id="@+id/MyLayoutBack">


    <TextView
        android:id="@+id/IlluminanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IlluminanceValue : "
        android:textColor="#ffffffff" />

    <TextView
    android:id="@+id/TV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="T : "
    android:textColor="#ffffffff"
    android:layout_marginTop="45dp"
    android:textAppearance="?android:textAppearanceMedium"
    android:layout_marginLeft="50dp"    />
    <TextView
        android:id="@+id/TV_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ffffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignTop="@+id/TV"
        android:layout_toRightOf="@+id/TV"
        android:layout_toEndOf="@+id/TV" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_TV"
        android:layout_above="@+id/AV"
        android:layout_toLeftOf="@+id/START"
        android:layout_toStartOf="@+id/START"
        android:layout_alignTop="@+id/TV_Text" />

    <TextView
        android:id="@+id/AV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F : "
        android:textColor="#ffffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/TV"
        android:layout_alignRight="@+id/TV"
        android:layout_alignEnd="@+id/TV" />
    <TextView
        android:id="@+id/AV_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ffffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignTop="@+id/AV"
        android:layout_toRightOf="@+id/AV"
        android:layout_toEndOf="@+id/AV" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_AV"
        android:layout_alignLeft="@+id/button_TV"
        android:layout_alignStart="@+id/button_TV"
        android:layout_alignTop="@+id/AV_Text"
        android:layout_alignBottom="@+id/AV_Text" />

    <TextView
        android:id="@+id/ISO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISO : "
        android:textColor="#ffffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/AV"
        android:layout_alignRight="@+id/AV"
        android:layout_alignEnd="@+id/AV" />
    <TextView
        android:id="@+id/ISO_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ffffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignTop="@+id/ISO"
        android:layout_toRightOf="@+id/ISO"
        android:layout_toEndOf="@+id/ISO" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_ISO"
        android:layout_alignLeft="@+id/button_AV"
        android:layout_alignStart="@+id/button_AV"
        android:layout_alignTop="@+id/ISO_Text"
        android:layout_alignBottom="@+id/ISO_Text" />

    <TextView
        android:id="@+id/EV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EV : "
        android:textColor="#ffffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/ISO"
        android:layout_alignRight="@+id/ISO"
        android:layout_alignEnd="@+id/ISO" />
    <TextView
        android:id="@+id/EV_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#ffffffff"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_alignTop="@+id/EV"
        android:layout_toRightOf="@+id/EV"
        android:layout_toEndOf="@+id/EV" />
    <!--<Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_EV"
        android:layout_alignLeft="@+id/button_ISO"
        android:layout_alignStart="@+id/button_ISO"
        android:layout_alignTop="@+id/EV_Text"
        android:layout_alignBottom="@+id/EV_Text" />-->

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET"
        android:id="@+id/SET"
        android:layout_alignBaseline="@+id/button_AV"
        android:layout_alignBottom="@+id/button_AV"
        android:layout_alignRight="@+id/RESET"
        android:layout_alignEnd="@+id/START" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/START"
        android:layout_below="@+id/EV_Text"
        android:layout_toLeftOf="@+id/RESET"
        android:layout_toStartOf="@+id/RESET" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/RESET"
        android:layout_alignTop="@+id/START"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=
"目安
\nEV=5~6
\nEV=7
\nEV=7~8
\nEV=8
\nEV=9
\nEV=9~10
\nEV=12
\nEV=13
\nEV=14
\nEV=15
\nEV=16"
        android:id="@+id/textView"
        android:layout_below="@+id/START"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="
\n: 夜景，夜間の室内
\n: 通常の舞台
\n: 夕景
\n: 室内スポーツ
\n: 明るい舞台
\n: ナイター
\n: 曇り・日陰
\n: 明るい曇
\n: 晴れ
\n: 快晴
\n: 快晴時の海・山・雪景色"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />


</RelativeLayout>
